<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" "http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
	<filter>
		<filter-name>CharactorFilter</filter-name>
		<filter-class>org.lanqiao.filter.CharactorFilter</filter-class>
	</filter>
	<filter>
		<filter-name>TransactionFilter</filter-name>
		<filter-class>org.lanqiao.filter.TransactionFilter</filter-class>
	</filter>
	<filter>
		<filter-name>UserLoginFilter</filter-name>
		<filter-class>org.lanqiao.filter.UserLoginFilter</filter-class>
	</filter>
	<filter-mapping>
		<filter-name>CharactorFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>TransactionFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<filter-mapping>
		<filter-name>UserLoginFilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>
	<listener>
		<listener-class>org.lanqiao.filter.ConfigListener</listener-class>
	</listener>
	<servlet>
		<servlet-name>BookServlet</servlet-name>
		<servlet-class>org.lanqiao.servlet.BookServlet</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>UserServlet</servlet-name>
		<servlet-class>org.lanqiao.servlet.UserServlet</servlet-class>
	</servlet>
  <servlet>
    <servlet-name>WxServlet</servlet-name>
    <servlet-class>org.lanqiao.servlet.WxServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>AdminServlet</servlet-name>
    <servlet-class>org.lanqiao.servlet.AdminServlet</servlet-class>
  </servlet>



	<servlet-mapping>
		<servlet-name>BookServlet</servlet-name>
		<url-pattern>/BookServlet/*</url-pattern>
	</servlet-mapping>
	<servlet-mapping>
		<servlet-name>UserServlet</servlet-name>
		<url-pattern>/UserServlet/*</url-pattern>
	</servlet-mapping>
  <servlet-mapping>
    <servlet-name>WxServlet</servlet-name>
    <url-pattern>/WxServlet/Core</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>AdminServlet</servlet-name>
    <url-pattern>/AdminServlet/*</url-pattern>
  </servlet-mapping>
</web-app>